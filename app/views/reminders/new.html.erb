<div class="jumbotron" id="custom">
    <header class="page-header">
        <h2> Create Your Reminder! </h2>
    </header>
</div>

<div class="container">

    <div class="row">

        <div class="col-xs-4">
            <ul class="list-group">

                <a href="#" class="list-group-item active">
                    <p><%= current_user.email %>: here are your favorites </p>
                </a>
                    <% x = [] %>
                    <% y = [] %>
                    <% @favorite.each do |t| %>
                        <% if t.user_id == current_user.id %>
                            <% x << t.phone_number %>
                            <% y << t.picture %>
                        <% end %>
                    <% end %>


                    <% x.uniq.each do |num| %>
                    <li>
                        <a href="#" class="list-group-item"><p> Phone Number</p>

                        <p class="list-group-item-text"><%= num %></p>
                        </a>
                    </li>

                    <% end %>
                    <% y.uniq.each do |pic| %>
                    <li>
                        <a href="#" class="list-group-item"><p> Picture</p>

                        <p class="list-group-item-text"><%= pic %></p>
                        </a>
                    </li>

                    <% end %>
            </ul>
        </div>

        <div class="col-xs-8" id="createReminder">
            <!-- <form class="form-horizontal"> -->

                <%= form_for @reminder do |f|%>
                    <div class="form-group">
                        <%=f.label "Your Reminder" %>
                        <%= f.text_field :text, class: "form-control", placeholder: "Enter Your Reminder" %>
                    </div>
                    <div class="form-group">
                        <%= f.label "Phone Number(s)" %>
                        <%= f.text_field :phone_number, class: "form-control", placeholder: "Enter Phone Number(s)" %>
                    </div>
                    <div class="form-group">
                        <%= f.label "When to be sent" %>
                        <%= f.text_field :time, class: "form-control", placeholder: "Enter Time"%>
                    </div>
                    <div class="form-group">
                        <%= f.label "Picture URL" %>
                        <%= f.text_field :picture, class: "form-control", placeholder: "Enter Your Picture URL" %>
                    </div>
                    <div class="form-group">
                        <%= f.label "Favorite?" %>
                        <%= f.check_box :favorite, class: "form-control" %>
                    </div>
                    <div class="Action">
                        <%= f.submit "Create Reminder", class: 'btn btn-md btn-primary' %>
                    </div>



                <% end %>
            <!-- </form> -->

        </div>





    </div>

</div>
